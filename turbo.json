{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"dev": {
			"outputs": ["dist/**"],
			"cache": false,
			"persistent": true,
			"dependsOn": ["^dev"]
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"//#lint:check": {
			"cache": false,
			"dependsOn": ["^build"]
		}
	}
}
